@color-form-border: #ccc;
@color-form-border-focus: #118eea;
@form-color-text: #000;

//========form========
.form {
	section {
		margin: 20px 0;
	}

	section > h4 {
		padding: 4px;
		margin: 10px 0;
		border-bottom: 1px solid #ddd;
		font-size: 16px;
		color: #000;
	}

	hr {
		margin: 10px;
		border: none;
		border-bottom: 1px solid #ddd;
	}
	.control-item {
		b
		/* overflow: hidden;*/
		padding: 5px 0;

		> label {
			float: left;
			display: block;
			width: 100px;
			padding: 8px 4px;
			color: #888;
			font-size: 12px;
			word-wrap: break-word;

			&.required:AFTER {
				content: " *";
				color: #ff3333;
				font-weight: bold;
				position: relative;
				top: 1px;
			}
		}
		> div {
			margin-left: 100px;
			word-wrap: break-word;
		}
	}
}

//========form-validation========
.form .control-item {
	&.error {
		.text-tip {
			color: #ff3333;
		}

		.input {
			border-color: #ff3333;
		}
	}

	&.success {
		.text-tip {
			color: green;
		}

		.input {
			border-color: green;
		}
	}
}

#list-zxrygl {
	width: 98%;
	margin: 0 auto
}

.form-search-bar {
	margin: 10px auto;
	width: 98%;

	/*height: 32px;*/
	line-height: 32px;
	.control-item {
		display: inline-block;
		vertical-align: top;
		padding: 0;

		> label {
			display: inline-block;
			vertical-align: top;
			width: auto;
			font-weight: normal;
		}

		> div {
			display: inline-block;
			vertical-align: top;
		}

		.input {
			width: 160px;
		}

		.select {
			width: 160px;
		}
	} // 按钮区域 
	.search-btn-div {
		padding-top: 20px;
		position: relative;
		height: 50px;
		.left-btn-side {
			position: absolute;
		}
		.right-btn-side {
			position: absolute;
