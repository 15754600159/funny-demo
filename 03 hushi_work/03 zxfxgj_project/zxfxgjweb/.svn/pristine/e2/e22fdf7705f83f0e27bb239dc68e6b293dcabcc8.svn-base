.pagination {
	overflow: hidden;
	list-style: none;
	font-size: 12px;
	right: 0;
    bottom: 0;
    position: absolute;
    .form-control{
    	line-height: 40px;
    	height: 40px;
    }
}

.pagination > li {
	float: left;
}

.pagination > li.active .page-num {
	border: 1px solid @color-active;
	background: @color-active;
	color: #fff;
}

.pagination .page-num {
	display: block;
	box-sizing: border-box;
	min-width: 32px;
	height: 32px;
	line-height: 32px;
	padding: 0 4px;
	margin: 0 2px;
	border: 1px solid #e9e9e9;
	color: #666;
	text-align: center;
	cursor: pointer;
}

.pagination .page-num > .icon {
	top: -2px;
}

.pagination .page-num.control {
	width: 24px;
}
