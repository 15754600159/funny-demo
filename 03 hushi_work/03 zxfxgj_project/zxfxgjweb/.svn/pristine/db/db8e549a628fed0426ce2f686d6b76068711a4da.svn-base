.container {
	width: 100%;
}

.window {
	position: absolute;
	margin: auto;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	box-shadow: 0 0 6px rgba(0, 0, 0, .6);
	max-width: 100%;
	max-height: 100%;
	background: #fff;
}

.window header {
	position: absolute;
	left: 0;
	right: 0;
	top: 0;
	height: 50px;
	line-height: 34px;
	padding: 0 10px;
	background:#4f8cf6;
	color: #fff;
	font-size: 14px;
	h1 {
		margin: 0px;
		font-size: 14px;
		color: #fff;
		line-height: 50px;
	}
}

.window footer {
	position: absolute;
	left: 0;
	right: 0;
	bottom: 0;
	height: 48px;
	/* border-top: 1px solid rgba(27, 67, 111, 0.8); */
	text-align: right;
	padding: 5px 10px;
	background:#4f8cf6;
}

.window footer > .btn {
	margin: 0 3px;
}

.window .content {
	position: absolute;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	overflow: auto;
	margin: 50px 0 48px 0;
}

.window .close {
	position: absolute;
	width: 50px;
	height: 50px;
	line-height: 50px;
	top: 0;
	right: 0;
	color: #000;
	font-size: 24px;
	text-align: center;
	cursor: pointer;
}

.window .close:HOVER {
	color: #7ad2fd;
}
