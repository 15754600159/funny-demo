/*任务详情页面-------------------------------------------------------------------------------------------------------------------------------------*/
#taskDetail button{
      background-color: #e6e6e6;
      outline: none;
}

#taskDetail button:hover{
      background-color: grey;
      color: white;
}
#ck_btn{
	margin-left: 1%;
}
.content .task-detail {
      width: 50%;
}

.content .task-detail>input {
      width: 50%;
      float: left;
}

.content .task-detail>button {
      width: 100px;
}

.content .task-detail>button {
      margin-left: 1%;
}

/*.content .task-detail>button + button {
      margin-left: 8%;
}*/
.content .tags{
	margin-top: 12px;
}
.content .tags span{
	margin-left: 6px;
}
.content .check-filter-box {
      width: 100%;
      height: 60px;
      margin-top: 2%;
      border: 1px solid #dee3eb;
      border-radius: 15px;
}

.content .check-filter-box>button {
      padding: 2px 20px;
      margin-top: 20px;
}

.content .check-filter-box>.checkbox-inline{
      margin-top: 20px;
}

.content .check-filter-box .checkbox-inline:nth-child(1), .content .check-filter-box>button:last-child{
      margin-left: 20px;
}

.content .task-detail-box{
      margin-top: 2%;
}

.content .task-detail-box .task-detail-card{
      position: relative;
      margin-bottom: 2%;
      height: 250px;
      border: 1px solid #dee3eb;
      background-color: #fff;
      box-shadow: 5px 5px 5px #888888;
}

.content .task-detail-card .img-box{
      position: relative;
      top: 50%;
      transform: translateY(-50%);
      width: 15%;
      float: left;
      display: block;
}

.content .task-detail-card .detail-box{
      width: 50%;
      float: left;
}

.content .task-detail-card .button-box{
      display: flex;
      align-items: center;
      width: 35%;
      float: left;
      height: 100%;
}

.content .task-detail-card .img-box img{
      height: 100px;
      margin: 0 48px;
}

.detail-box .person-info{
      height: 160px;
      padding-top: 30px;
      width: 60%;
      float: left;
}

.detail-box .occupation{
      height: 160px;
      padding-top: 30px;
      width: 40%;
      float: left;
}

.detail-box .tags{
      height: 60px;
      width: 100%;
      float: left;
}

.tags .labels .label{
      display: inline-block;
      margin-bottom: 10px;
}

.task-detail-box .person-info .person-info-row{
      margin-bottom: 15px;
}

.content .person-info span{
      margin-right: 40px;
}

.content .task-detail-card .button-box button{
      margin-right: 40px; 
}

