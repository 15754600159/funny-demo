body{
	background-color: #f6f7f9;
}
button{
	outline: none;
}
.top {
      height: 70px;
      background-color: #1A427D;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      z-index: 9999;
}

.top>a {
      float: left;
      margin: 17px 20px;
}

.top .title {
      font-size: 20px;
      color: #fff ! important;
      padding-left: 30px;
      padding-top: 18px;
      float: left;
}
.top .title a{
	color: #337ab7
}
.top .title a:hover{
	color: #fff;
}
.top .role {
      font-size: 18px;
      color: #6DA7E7 ! important;
      padding-right: 30px;
      float: right;
}

.top .role a {
      line-height: 70px;
}

.top .role a:hover {
      color: #fff;
}



